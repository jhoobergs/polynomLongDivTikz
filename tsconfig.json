{
    "compilerOptions": {
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "experimentalDecorators": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext",
            "dom"
        ],
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "outDir": "dist"
    },
    "include": [
        "src/*.ts",
        "test/*.ts"
    ],
    "exclude": []
}